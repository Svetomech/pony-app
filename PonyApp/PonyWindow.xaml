<Window x:Class="PonyApp.PonyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	   xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Title="Pony" Height="256" Width="256" WindowStyle="None" AllowsTransparency="True" Background="#00000000" Icon="/PonyApp;component/Resources/Rarity/StandRight.gif">
	<Grid Name="MainGrid">
		<Image Name="Image" Width="200" Height="200"  Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center">
			<Image.ContextMenu>
				<ContextMenu Opened="OnContextMenuOpen" Closed="OnContextMenuClosed">
					<MenuItem Header="Stand off to the Right" Click="TellHoldToRight" />
					<MenuItem Header="Stand off to the Left" Click="TellHoldToLeft" />
					<MenuItem Header="PONY BE FREE" Click="TellHasFreedom" />
				</ContextMenu>
			</Image.ContextMenu>
		</Image>
	</Grid>
</Window>
